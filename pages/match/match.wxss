page{
  background-color: #F0F8FF;
}

.match-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.match-container .match-item{
  width: 95%;
  background: white;
  margin-top: 20rpx;
  border-radius: 7rpx;
}

.match-item .header{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 120rpx;
  font-size: 35rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #EEE9E9;
}

.header image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-right: 10rpx;
  margin-left: 15rpx;
}

.match-container .content{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
  font-size: 35rpx;
}

.content .content-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content image{
  width: 80rpx;
  height: 80rpx;
}

.comment-container{
  width: 95%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 15rpx;
  border-top-style:solid;
  border-width:1rpx;
  border-color: #EEE9E9;
  align-items: center;
}

.comment-container .zan,.comment{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
}

.zan image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.comment image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

/**post css**/

.post-container{
  position:fixed;
  right:18rpx;
  top:5rpx;
  z-index:100;
  width: 80prx;
  height: 80prx;
}

.post image{
  width: 80rpx;
  height: 80rpx;
}
