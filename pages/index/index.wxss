
.select-school{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  width: 100%;
  height: 90rpx;
  background-color: #F0F8FF;
}

.select-school .school-location{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background: white;
  width: 95%;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.school-location .location-image{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.location-icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
}

.school-location .location-name{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-weight: 200;
  font-size: 30rpx;
}

.container .container-wall{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
}

.container-wall .wall-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 15rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F0F8FF;
}

.wall-item .item-container{
  width: 95%;
  display: flex;
  flex-direction: row;
  margin-bottom: 5rpx;
}

.item-container .item-image{
  width: 16%;
}

.item-container .item-content{
  width: 84%;
  display: flex;
  flex-direction: column;
}

.item-image image{
  width:90rpx;
  height:90rpx
}

.item-content .user-name{
  font-weight: 300;
  font-size: 38rpx;
  margin-bottom: 8rpx;
  margin-top: -5rpx;
}

.item-content .content{
  font-weight: 200;
  font-size: 35rpx;
  margin-bottom: 10rpx;
  margin-top: 1rpx;
}

.item-content .post-time{
  font-weight: 100;
  font-size: 25rpx;
  margin-bottom: 8rpx;
  color: darkgray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.content-image image{
  width: 400rpx;
}

.post-time .comment-image{
  width: 40prx;
}

.item-content .comment{
  background: WhiteSmoke;
  margin-bottom: 20rpx;
}

.comment .qipao{
  width: 0;
  height: 0;
  border-right: 20rpx solid white;
  border-bottom: 20rpx solid WhiteSmoke;
  border-left: 20rpx solid white;
  margin-top: -18rpx;
  margin-left: 20rpx;
}

.comment .comment-detail{
  margin: 15rpx 15rpx;
  font-size: 30rpx;
  font-weight: 200;
  display: flex;
  flex-direction: row;
}

.comment-detail .comment-user{
  color: #0061b2;
}

/**post css**/

.post-container{
  position:fixed;
  right:18rpx;
  top:5rpx;
  z-index:100;
  width: 80prx;
  height: 80prx;
}

.post image{
  width: 80rpx;
  height: 80rpx;
}

/** nav-bar **/

.nav-bar-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom-style:solid;
  border-width:5rpx;
  border-color: #F0F8FF;
}

.nav-bar-container .nav-bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 95%;
  font-weight: 200;
  font-size: 30rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.nav-bar .all{
  color: #FF4500;
}