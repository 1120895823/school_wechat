.container{
  display: flex;
  flex-direction: column;
}

.switch-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 50rpx 0rpx;
  color: white;
  background: #66CDAA;
  font-size: 40rpx;
}

.switch-container .selected{
  height: 1rpx;
  width: 100%;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: white;
  padding-top: 10rpx;
}

.step-log{
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
}

.container .header{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  background: white;
  padding-bottom: 50rpx;
  padding-top: 50rpx;
  color:#66CDAA;
}

.header .header-content{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.header-content .step-content{
  width: 100%;
  display: flex;
  flex-direction: row;
}

/** 内容样式 **/
.step-content .today-step{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right-style:solid;
  border-width:1rpx;
  border-color: #CCCCCC;
}

.step-content .total-step{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-content .step{
  font-size: 50rpx;
}

.content-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  align-items: center;
  margin-top: 5rpx;
}

.content-container .content{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.content-container .item{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.item .left{
  width: 25%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  border-right-style:solid;
  border-width:1rpx;
  border-color: #CCCCCC;
  justify-content: center;
}


.left .date{
  position: absolute;
  left: 120rpx;
  background: #66CDAA;
  color: white;
  font-size: 25rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 10rpx;
}

.item .right{
  padding-left: 300rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
}

.right .step-number{
  font-size: 40rpx;
  width: 100%;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #CCCCCC;
  color: #66CDAA;
}

/** 加载更多 **/
.get-more{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 200;
  width: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.get-more image{
  width: 40rpx;
  height: 40rpx;
}

.get-more .get-more-item{
  display: flex;
  flex-direction: row;
}

.loading{
  margin-left: 15rpx;
}