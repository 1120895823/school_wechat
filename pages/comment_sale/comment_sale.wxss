page{
  background-color: #F0F8FF;
}

.sale-container{
  width: 100%;
  background: white;
}

.sale-item{
  margin-top: 5rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sale-item .header{
  width: 95%;
  background: white;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 15rpx;
  margin-top: 9rpx;
}

.user-name{
  font-size: 3prx;
  font-weight: 200;
  margin-left: 10rpx;
}

.content{
  width: 95%;
  display: flex;
  flex-direction: column;
  background: white;
}

.image-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .sale-image{
  width: 97%;
  border-radius: 10rpx;
}

.content .craete_at{
  color: darkgray;
  font-size: 25rpx;
  margin-left: 18rpx;
  margin-top: 5rpx;
}

.content .content-detail{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 15rpx;
  width: 96%;
}

.content-detail .detail-item{
  margin-right: 15rpx;
  margin-top: 15rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.detail-item-user{
  background: #DB9019;
  color: white;
}

.detail-item-gender{
  background: #FF6E97;
  color: white;
}

.detail-item-major{
  background: #1A2D27;
  color: white;
}

.detail-item-like{
   background: #F1AAA6;
   color: white;
}

.show-self{
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  background: #F1AAA6;
  color: white;
  font-size: 30rpx;
  padding: 10rpx;
  border-radius: 5rpx;
  margin-bottom: 30rpx;
}

.comment-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  border-top-style:solid;
  border-width:1rpx;
  border-color: #E8E8E8;
}

.comment-wall{
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.comment-wall .comment-header{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
  font-weight: 200;
  color: darkgray;
  height: 100rpx;
}

.comment-header .zan{
  display: flex;
  flex-direction: row;
}
.comment-header .comment{
  display: flex;
  flex-direction: row;
}


/**post css**/

.post-container{
  position:fixed;
  right:18rpx;
  top:5rpx;
  z-index:100;
  width: 80prx;
  height: 80prx;
}

.post image{
  width: 80rpx;
  height: 80rpx;
}
