.letter-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top-style:solid;
  border-width:1rpx;
  border-color: #F0F8FF;
}

.letter-content{
  width: 95%;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

.scroll-view-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 20rpx;
}

.scroll-view-item .user-left{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.user-left .left-content-avatar{
  width: 15%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.left-content-avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.left-content{
  display: flex;
  flex-direction: column;
  width: 70%;
}

.left-content .left-content-message{
  display: flex;
  flex-direction: row;
}

.left-content-message .left-content-item{
  background: #48D1CC;
  color: white;
  padding: 20rpx;
  border-radius: 20rpx;
}

.left-content .left-time{
  font-size: 30rpx;
  color: darkgray;
  margin-top: 15rpx;
}

/** right **/
.scroll-view-item .user-right{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.user-right .right-content-avatar{
  width: 15%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
}

.right-content-avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.right-content{
  display: flex;
  flex-direction: column;
  width: 70%;
  justify-content: flex-end;
}

.right-content .right-content-message{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.right-content-message .right-content-item{
  background: #48D1CC;
  color: white;
  padding: 20rpx;
  border-radius: 20rpx;
}

.right-content .right-time{
  font-size: 30rpx;
  color: darkgray;
  margin-top: 15rpx;
  display: flex;
  justify-content: flex-end;
}


/** 底部发送 **/

.comment-input-container{
  position:fixed;
  bottom: 0rpx;
  z-index:100;
  width: 100%;
  height: 200prx;
  background: #DCDCDC;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
}

.comment-input-container input{
  width: 100%;
  margin-left: 20rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #0aecc3;
  margin-right: 20rpx;
  padding-bottom: 15rpx;
  font: 30rpx;
  font-weight: 200;
  margin-bottom: 30rpx;
  padding-top: 17rpx;
}

.comment-input-container .send-button{
  width: 130rpx;
  height: 70rpx;
  font-size: 30rpx;
  background: #0aecc3;
  color: white;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-radius: 10rpx;
}

.comment-input-container .add-image{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-right: -10rpx;
}

.add-image image{
  width: 75rpx;
  height: 75rpx;
  margin-left: 10rpx;
}

