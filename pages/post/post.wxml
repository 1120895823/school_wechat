<view class='post-container container'>
  <view class='form'>

    <view class='input'>
      <textarea placeholder="爱情属于勇敢的人儿" bindinput="getTextContent"/>
    </view>
    <view class='image-form'>
      <view class='select-image'>
        <view class='image-item' wx:for="{{imageArray}}" wx:key='{{imageArray}}'>
            <image class='upload-image' 
            bindtap='previewImage' 
            id='{{item}}' mode='aspectFill' src='{{item}}'></image>
            <image src='/image/delete.png' id='{{index}}' wx:key='{{imageArray}}' bindtap='removeImage' class='remove-image'></image>
        </view>
        <view>
          <image class='upload-image' bindtap='selectImage' src='/image/select-image.png'></image>
        </view>
      </view>
    </view>  
  </view>

<view class='middle'>
  <view class='location'>
  <view class='item'>定位</view>
    <view class='location-image'><image src='/image/my-location.png'></image></view>
  </view>

  <view class='private'>
    <view class='item'>匿名</view>
    <switch bindchange="setPrivate" color='#0aecc3'/>
  </view>
  
</view>


  <view class='button-container'>
    <button bindtap='post'> 发表 </button>
  </view>

</view>
